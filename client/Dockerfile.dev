# Development Dockerfile for the frontend
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run development server with host flag for Docker
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
